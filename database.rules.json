{
  "rules": {
    "users": {
      "$uid": {
        ".validate": "newData.hasChildren(['email'])",
        "email": {
          ".validate": "newData.isString() && newData.val().matches(/^[A-Z0-9._%+-]+@[A-Z0-9.-]+\\.[A-Z]{2,4}$/i)"
        },
        "name": {
          ".validate": "newData.isString() && newData.val().length > 0 && newData.val().length < 100"
        },
        "$other": {
          ".validate": "false"
        },
        ".read": "auth != null && auth.uid == $uid",
        ".write": "auth != null && auth.uid == $uid"
      }
    },
    "events": {
      "$eventId": {
        ".validate": "newData.hasChildren(['id'])",
        "id": {
          ".validate": "newData.isString()"
        },
        "name": {
          ".validate": "newData.isString() && newData.val().length > 0 && newData.val().length < 100"
        },
        "$other": {
          ".validate": "false"
        },
        ".read": "true"
      }
    },
    "eventData": {
      "$eventId": {
        ".validate": "newData.hasChildren()",
        "description": {
          ".validate": "newData.isString()"
        },
        "headerImage": {
          ".validate": "newData.isString()"
        },
        "location": {
          ".validate": "newData.isString()"
        },
        "startDate": {
          ".validate": "newData.isNumber()"
        },
        "$other": {
          ".validate": "false"
        },
        ".read": "true",
        ".write": "root.child('events').child($eventId).val() != null"
      }
    },
    "eventParticipants": {
      "$event": {
        ".validate": "newData.hasChildren()",
        ".write": "root.child('events').child($event).val() != null",
        "$uid": {
          ".validate": "newData.isBoolean() && (auth != null && auth.uid == $uid)"
        }
      }
    },
    "eventModules": {
      "$eventId": {
        ".validate": "newData.hasChildren(['details', 'description', 'participants'])",
        "details": {
          ".validate": "newData.hasChildren(['enabled', 'showTime', 'showLocation', 'showMap'])",
          "enabled": {
            ".validate": "newData.isBoolean()"
          },
          "$other": {
            ".validate": "false"
          },
          "showTime": {
            ".validate": "newData.isBoolean()"
          },
          "showLocation": {
            ".validate": "newData.isBoolean()"
          },
          "showMap": {
            ".validate": "newData.isBoolean()"
          }
        },
        "description": {
          ".validate": "newData.hasChildren(['enabled'])",
          "enabled": {
            ".validate": "newData.isBoolean()"
          },
          "$other": {
            ".validate": "false"
          }
        },
        "participants": {
          ".validate": "newData.hasChildren(['enabled'])",
          "enabled": {
            ".validate": "newData.isBoolean()"
          },
          "$other": {
            ".validate": "false"
          }
        },
        "$other": {
          ".validate": "false"
        },
        ".read": "true",
        ".write": "true"
      }
    }
  }
}
